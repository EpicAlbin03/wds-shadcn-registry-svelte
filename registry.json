{
	"$schema": "./static/schema/registry.json",
	"name": "wds-shadcn-registry-svelte",
	"homepage": "https://wds-shadcn-registry-svelte.netlify.app",
	"aliases": {
		"lib": "$lib/registry/lib",
		"ui": "$lib/registry/ui",
		"components": "$lib/registry/components",
		"utils": "$lib/utils",
		"hooks": "$lib/registry/hooks"
	},
	"items": [
		{
			"name": "loading-swap",
			"type": "registry:ui",
			"description": "Swaps child content with a loading spinner without changing the element size.",
			"dependencies": ["@lucide/svelte"],
			"registryDependencies": ["utils"],
			"files": [
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\ui\\loading-swap\\index.ts"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\ui\\loading-swap\\loading-swap.svelte"
				}
			]
		},
		{
			"name": "action-button",
			"type": "registry:component",
			"description": "A button that performs an action when clicked and optionally asks for user confirmation.",
			"dependencies": [],
			"registryDependencies": ["button", "loading-swap", "alert-dialog"],
			"files": [
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\action-button\\action-button.svelte"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\action-button\\index.ts"
				}
			]
		},
		{
			"name": "multi-select",
			"type": "registry:component",
			"description": "A multi-select input that emulates the Shadcn Select component as closely as possible.",
			"dependencies": ["@lucide/svelte", "bits-ui", "runed"],
			"registryDependencies": ["utils", "badge", "command", "popover"],
			"files": [
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\multi-select\\index.ts"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\multi-select\\multi-select.svelte"
				}
			]
		},
		{
			"name": "number-input",
			"type": "registry:component",
			"description": "An input that returns a number value and automatically handles invalid inputs.",
			"dependencies": [],
			"registryDependencies": ["utils", "input"],
			"files": [
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\number-input\\index.ts"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\number-input\\number-input-group.svelte"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\number-input\\number-input.svelte"
				}
			]
		},
		{
			"name": "password-input",
			"type": "registry:component",
			"description": "An input that can toggle visibility of the password text and check the strength of the password.",
			"dependencies": [
				"@zxcvbn-ts/core",
				"@zxcvbn-ts/language-common",
				"@zxcvbn-ts/language-en",
				"@lucide/svelte"
			],
			"registryDependencies": ["utils", "tooltip", "input-group"],
			"files": [
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\password-input\\index.ts"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\password-input\\password-input-strength-checker.svelte"
				},
				{
					"type": "registry:file",
					"path": "src\\lib\\registry\\components\\password-input\\password-input.svelte"
				}
			]
		}
	]
}
